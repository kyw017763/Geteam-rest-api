{
	"compilerOptions": {
		"module": "commonjs",
		"target": "es6",
		"outDir": "dist",
		"rootDir": ".",
		"lib": [
			"dom",
			"es5",
			"scripthost",
			"es2015.promise"
		],
		"sourceMap": true,
		"strict": true,
		"esModuleInterop": true,
		"typeRoots": [
			"./@types",
			"./node_modules/@types"
		]
	},
	"exclude": [
		"node_modules",
		"dist"
	]
}